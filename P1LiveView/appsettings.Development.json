{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "File",
        "Args": { "path": "C:/Code/dotnet/p1-reader-github/logs/P1LiveView.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "P1LiveView"
    }
  },
  "SqliteFactorySettings": {
    "LocalDbPath": "C:/temp",
    "ArchiveDbPath": "C:/temp"
  },
  "AllowedHosts": "*"
}
