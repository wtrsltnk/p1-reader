{
  "SqliteFactorySettings": {
    "LocalDbPath": "/home/pi/apps/home",
    "ArchiveDbPath": "/home/pi/NAS/slimmemeter"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": { "path": "/home/pi/apps/home/logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "P1ReaderApp"
    }
  },
  "AllowedHosts": "*"
}
